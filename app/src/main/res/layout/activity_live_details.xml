<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.thewishofthestarlanguage.view.famousteacher.activity.LiveDetailsActivity">
    <RelativeLayout
        android:background="#fff"
        android:layout_alignParentTop="true"
        android:id="@+id/titlelan"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/ts_26"
        android:gravity="center_vertical"
        android:layout_height="@dimen/ts_44">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/ts_32"
            android:src="@mipmap/detail_back"
            android:layout_marginLeft="@dimen/ts_12"
            android:layout_height="@dimen/ts_32" />


        <ImageView
            android:id="@+id/masterdetail_aty_share"
            android:layout_width="@dimen/ts_32"
            android:src="@mipmap/detail_share"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/ts_12"
            android:layout_height="@dimen/ts_32" />

    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/live_recycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom">


        <CheckBox
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:id="@+id/live_shoucang"
            android:layout_height="wrap_content"
            android:button="@drawable/collect_check_bg"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:checked="false"
            android:paddingLeft="@dimen/ts_8"
            android:textColor="@drawable/praise_check_tv_bg"
            />


        <TextView
            android:id="@+id/mai"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:background="#5d85f1"
            android:gravity="center"
            android:text="购买"
            android:textColor="#fff"
            android:textSize="20sp" />
    </LinearLayout>
</RelativeLayout>
