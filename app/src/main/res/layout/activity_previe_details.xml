<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.thewishofthestarlanguage.view.preview.activity.PrevieDetailsActivity">


    <LinearLayout


        android:layout_alignParentBottom="true"
        android:id="@+id/prvie_liner"
        android:layout_width="match_parent"
      android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/shoucang"
            android:layout_margin="20dp"
            android:src="@mipmap/collect_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_margin="20dp"
            android:text="电话咨询"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/yuyue"
            android:text="预约"
            android:textSize="15dp"
            android:textColor="#fff"
            android:gravity="center"
           android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#171ede"/>
    </LinearLayout>
    <ListView

        android:layout_above="@+id/prvie_liner"
        android:id="@+id/preview_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>
</RelativeLayout>
