<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.thewishofthestarlanguage.view.treasure.activity.TreasureDetailsActivity">
<RelativeLayout
        android:id="@+id/preview_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_margin="10dp"
        android:src="@mipmap/activity_return"
        android:id="@+id/fanhui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_centerInParent="true"
        android:layout_alignTop="@+id/fanhui"
        android:text="艺考圈详情"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
    <ListView
        android:layout_below="@+id/preview_title"
        android:layout_width="match_parent"
        android:id="@+id/detalist"
        android:layout_height="wrap_content"></ListView>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <EditText
            android:id="@+id/pinglun"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:hint="写评论"/>

        <LinearLayout
         android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/home_valuable_list_item_collect_cb"
                android:layout_width="wrap_content"
                android:button="@drawable/collect_check_bg"
                android:layout_height="wrap_content"
                android:checked="false"
                android:paddingLeft="@dimen/ts_8"
                android:textColor="@drawable/praise_check_tv_bg"/>

            <CheckBox
                android:id="@+id/home_valuable_list_item_praise_cb2"
                android:layout_width="wrap_content"
                android:drawableTop="@mipmap/work_detail_comment"
                android:layout_height="wrap_content"
                android:checked="false"
                android:paddingLeft="@dimen/ts_8"
               />
            <CheckBox
                android:id="@+id/home_valuable_list_item_praise_cb"
                android:layout_width="wrap_content"
                android:button="@drawable/praise_check_bg"
                android:layout_height="wrap_content"
                android:checked="false"
                android:paddingLeft="@dimen/ts_8"
                android:textColor="@drawable/praise_check_tv_bg"/>

        </LinearLayout>
        
    </RelativeLayout>

</RelativeLayout>
