<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.thewishofthestarlanguage.view.famousteacher.activity.ReplyActivity">

    <RelativeLayout
        android:id="@+id/replay_title"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView

        android:src="@mipmap/ic_launcher"
        android:id="@+id/pohot"
        android:layout_width="35dp"
        android:layout_height="33dp" />
    <TextView

        android:text="刘德华"
        android:layout_toRightOf="@+id/pohot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"/>
    <TextView
        android:layout_below="@+id/name"
        android:text="hahahahhah"
        android:layout_alignLeft="@+id/name"
        android:id="@+id/contentMeg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="一天前"
        android:layout_alignParentRight="true"
        android:id="@+id/sj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <CheckBox
        android:id="@+id/opera_zan"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/pohot"
        android:button="@drawable/praise_check_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginRight="15dp"
        android:layout_alignBottom="@+id/pohot"
        android:textColor="#0840f5"
        android:layout_toLeftOf="@+id/opera_zan"
        android:text="回复"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/huifu"/>
    </RelativeLayout>
   <android.support.v7.widget.RecyclerView
       android:layout_margin="5dp"
       android:layout_below="@+id/replay_title"
       android:id="@+id/reply_recycle"
       android:layout_width="match_parent"
       android:layout_above="@+id/linlin"
       android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:id="@+id/linlin"
       android:layout_alignParentBottom="true"
        android:weightSum="4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/pinglun"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <Button
            android:background="#5173fc"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/pinglun"
            android:id="@+id/fa"
            android:text="发送"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>
