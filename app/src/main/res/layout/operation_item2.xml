<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:src="@mipmap/ic_launcher"
        android:id="@+id/pohot"
        android:layout_width="35dp"
        android:layout_height="33dp" />
    <TextView

        android:text="刘德华"
        android:layout_toRightOf="@+id/pohot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"/>
    <TextView
        android:layout_below="@+id/name"
        android:text="hahahahhah"
        android:layout_alignLeft="@+id/name"
        android:id="@+id/contentMeg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="一天前"
        android:layout_alignParentRight="true"
        android:id="@+id/sj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <CheckBox
        android:id="@+id/opera_zan"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/pohot"
        android:button="@drawable/praise_check_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <TextView
            android:layout_marginRight="15dp"
            android:layout_alignBottom="@+id/pohot"
            android:textColor="#0840f5"
            android:layout_toLeftOf="@+id/opera_zan"
            android:text="回复"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/huifu"/>
</RelativeLayout>